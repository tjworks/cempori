<layout>
  <default>
    <reference name="notifications">
      <block name="spreadtheword_notifications" template="addinmage/spreadtheword/notifications.phtml" type="spreadtheword/adminhtml_notifications"></block>
    </reference>
  </default>
  <spreadtheword_adminhtml_rules_index>
    <reference name="head">
      <action method="addCss">
        <name>addinmage/spreadtheword/styles.css</name>
      </action>
    </reference>
    <reference name="content">
      <block name="spreadtheword_rules" type="spreadtheword/adminhtml_rules_rules">
        <block name="store_switcher" as="store_switcher" type="spreadtheword/adminhtml_rules_rules_elements_switcher">
          <action method="setUseConfirm">
            <params>0</params>
          </action>
        </block>
      </block>
    </reference>
  </spreadtheword_adminhtml_rules_index>
  <spreadtheword_adminhtml_discounts_index>
    <reference name="head">
      <action method="addCss">
        <name>addinmage/spreadtheword/styles.css</name>
      </action>
    </reference>
    <reference name="content">
      <block name="spreadtheword_discounts" type="spreadtheword/adminhtml_discounts_discounts" />
    </reference>
  </spreadtheword_adminhtml_discounts_index>
  <spreadtheword_adminhtml_queue_index>
    <reference name="head">
      <action method="addJs">
        <script>addinmage/spreadtheword/adminhtml/js.js</script>
      </action>
      <action method="addCss">
        <name>addinmage/spreadtheword/styles.css</name>
      </action>
    </reference>
    <reference name="content">
      <block name="spreadtheword_queue" type="spreadtheword/adminhtml_queue_queue" />
    </reference>
  </spreadtheword_adminhtml_queue_index>
  <spreadtheword_adminhtml_problems_index>
    <reference name="head">
      <action method="addCss">
        <name>addinmage/spreadtheword/styles.css</name>
      </action>
    </reference>
    <reference name="content">
      <block name="spreadtheword_problems" type="spreadtheword/adminhtml_problems_problems" />
    </reference>
  </spreadtheword_adminhtml_problems_index>
  <spreadtheword_adminhtml_rules_new>
    <reference name="head">
      <action method="addCss">
        <name>addinmage/spreadtheword/styles.css</name>
      </action>
    </reference>
    <reference name="left">
      <block name="spreadtheword_edit_tabs" type="spreadtheword/adminhtml_rules_rules_edit_tabs" />
    </reference>
    <reference name="content">
      <block name="spreadtheword_edit_rule" type="spreadtheword/adminhtml_rules_rules_edit" />
    </reference>
  </spreadtheword_adminhtml_rules_new>
  <spreadtheword_adminhtml_rules_edit>
    <reference name="head">
      <action method="addJs">
        <script>addinmage/spreadtheword/adminhtml/js.js</script>
      </action>
      <action method="addCss">
        <name>addinmage/spreadtheword/styles.css</name>
      </action>
    </reference>
    <reference name="left">
      <block name="spreadtheword_edit_tabs" type="spreadtheword/adminhtml_rules_rules_edit_tabs">
        <block name="spreadtheword_edit_tab_general" type="spreadtheword/adminhtml_rules_rules_edit_tab_general" />
        <block name="spreadtheword_edit_tab_manual" type="spreadtheword/adminhtml_rules_rules_edit_tab_manual" />
        <block name="spreadtheword_edit_tab_to_sender" type="spreadtheword/adminhtml_rules_rules_edit_tab_to_sender" />
        <block name="spreadtheword_edit_tab_to_friends" type="spreadtheword/adminhtml_rules_rules_edit_tab_to_friends" />
        <block name="spreadtheword_edit_tab_custom_rules_sender" type="spreadtheword/adminhtml_rules_rules_edit_tab_custom_rules_sender" />
        <block name="spreadtheword_edit_tab_custom_rules_friends" type="spreadtheword/adminhtml_rules_rules_edit_tab_custom_rules_friends" />
        <action method="addTab">
          <id>general_section</id>
          <block>spreadtheword_edit_tab_general</block>
        </action>
        <action method="addTab">
          <id>manual_section</id>
          <block>spreadtheword_edit_tab_manual</block>
        </action>
        <action method="addTab">
          <id>tosender_section</id>
          <block>spreadtheword_edit_tab_to_sender</block>
        </action>
        <action method="addTab">
          <id>tofriends_section</id>
          <block>spreadtheword_edit_tab_to_friends</block>
        </action>
        <action method="addTab">
          <id>custom_sender_section</id>
          <block>spreadtheword_edit_tab_custom_rules_sender</block>
        </action>
        <action method="addTab">
          <id>custom_friends_section</id>
          <block>spreadtheword_edit_tab_custom_rules_friends</block>
        </action>
      </block>
    </reference>
    <reference name="content">
      <block name="spreadtheword_edit_rule" type="spreadtheword/adminhtml_rules_rules_edit" />
    </reference>
  </spreadtheword_adminhtml_rules_edit>
  <spreadtheword_adminhtml_report_index>
    <reference name="head">
      <action method="addCss">
        <name>addinmage/spreadtheword/styles.css</name>
      </action>
    </reference>
  </spreadtheword_adminhtml_report_index>
  <spreadtheword_adminhtml_report_invitation_timeline>
    <update handle="spreadtheword_adminhtml_report_index" />
    <reference name="content">
      <block name="spreadtheword.report.grid.container" template="addinmage/spreadtheword/reports/container.phtml" type="spreadtheword/adminhtml_reports_general_timeline">
        <block name="store.switcher" template="report/store/switcher/enhanced.phtml" type="adminhtml/store_switcher">
          <action method="setStoreVarName">
            <var_name>store_ids</var_name>
          </action>
        </block>
        <block name="grid.filter.form" type="spreadtheword/adminhtml_reports_filter_form">
          <action method="setDynamicsVisibility">
            <visibility>1</visibility>
          </action>
        </block>
      </block>
    </reference>
  </spreadtheword_adminhtml_report_invitation_timeline>
  <spreadtheword_adminhtml_report_sales_performance>
    <update handle="spreadtheword_adminhtml_report_index" />
    <reference name="content">
      <block name="spreadtheword.report.grid.container" template="addinmage/spreadtheword/reports/container.phtml" type="spreadtheword/adminhtml_reports_general_performance">
        <block name="store.switcher" template="report/store/switcher/enhanced.phtml" type="adminhtml/store_switcher">
          <action method="setStoreVarName">
            <var_name>store_ids</var_name>
          </action>
        </block>
        <block name="grid.filter.form" type="spreadtheword/adminhtml_reports_filter_form">
          <action method="setDynamicsVisibility">
            <visibility>1</visibility>
          </action>
          <action method="setOrderStatusesVisibility">
            <visibility>1</visibility>
          </action>
          <action method="setSumUpDataPerPeriodVisibility">
            <visibility>1</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>visitor_type</field>
            <visibility>0</visibility>
          </action>
          <action method="setOrderSideVisibility">
            <visibility>1</visibility>
          </action>
        </block>
      </block>
    </reference>
  </spreadtheword_adminhtml_report_sales_performance>
  <spreadtheword_adminhtml_report_service_popularity_treemap>
    <update handle="spreadtheword_adminhtml_report_index" />
    <reference name="content">
      <block name="spreadtheword.report.grid.container" template="addinmage/spreadtheword/reports/container.phtml" type="spreadtheword/adminhtml_reports_service_treemap">
        <block name="store.switcher" template="report/store/switcher/enhanced.phtml" type="adminhtml/store_switcher">
          <action method="setStoreVarName">
            <var_name>store_ids</var_name>
          </action>
        </block>
        <block name="grid.filter.form" type="spreadtheword/adminhtml_reports_filter_form">
          <action method="addGroupingOption" translate="value">
            <key>service</key>
            <value>Service Group</value>
          </action>
          <action method="addGroupingOption" translate="value">
            <key>period</key>
            <value>Period</value>
          </action>
          <action method="setFieldVisibility">
            <field>services</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>show_empty_rows</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>detailed_information</field>
            <visibility>0</visibility>
          </action>
          <action method="setGroupingVisibility">
            <visibility>1</visibility>
          </action>
          <action method="setDynamicsVisibility">
            <visibility>1</visibility>
          </action>
        </block>
      </block>
    </reference>
  </spreadtheword_adminhtml_report_service_popularity_treemap>
  <spreadtheword_adminhtml_report_visitors_statistics>
    <update handle="spreadtheword_adminhtml_report_index" />
    <reference name="content">
      <block name="spreadtheword.report.grid.container" template="addinmage/spreadtheword/reports/container.phtml" type="spreadtheword/adminhtml_reports_visitors_visitors">
        <block name="store.switcher" template="report/store/switcher/enhanced.phtml" type="adminhtml/store_switcher">
          <action method="setStoreVarName">
            <var_name>store_ids</var_name>
          </action>
        </block>
        <block name="grid.filter.form" type="spreadtheword/adminhtml_reports_filter_form">
          <action method="setDynamicsVisibility">
            <visibility>1</visibility>
          </action>
          <action method="addGroupingOption" translate="value">
            <key>service</key>
            <value>Service</value>
          </action>
          <action method="addGroupingOption" translate="value">
            <key>period</key>
            <value>Period</value>
          </action>
          <action method="addGroupingOption" translate="value">
            <key>visitor_type</key>
            <value>Customer Type</value>
          </action>
          <action method="setGroupingVisibility">
            <visibility>1</visibility>
          </action>
          <action method="addVisualizationBasePontOption" translate="value">
            <key>imported</key>
            <value>Imported Friends</value>
          </action>
          <action method="addVisualizationBasePontOption" translate="value">
            <key>invited</key>
            <value>Invited Friends</value>
          </action>
          <action method="addVisualizationBasePontOption" translate="value">
            <key>returned</key>
            <value>Responded Invitees</value>
          </action>
          <action method="setVisualizationPointVisibility">
            <visibility>1</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>show_empty_rows</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>detailed_information</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>services</field>
            <visibility>1</visibility>
          </action>
        </block>
      </block>
    </reference>
  </spreadtheword_adminhtml_report_visitors_statistics>
  <spreadtheword_adminhtml_report_rule_rating>
    <update handle="spreadtheword_adminhtml_report_index" />
    <reference name="content">
      <block name="spreadtheword.report.grid.container" template="addinmage/spreadtheword/reports/container.phtml" type="spreadtheword/adminhtml_reports_rule_rating">
        <block name="store.switcher" template="report/store/switcher/enhanced.phtml" type="adminhtml/store_switcher">
          <action method="setStoreVarName">
            <var_name>store_ids</var_name>
          </action>
        </block>
        <block name="grid.filter.form" type="spreadtheword/adminhtml_reports_filter_form">
          <action method="setRatingConditions">
            <visibility>1</visibility>
          </action>
          <action method="setRuleTypesVisibility">
            <visibility>1</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>detailed_information</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>show_empty_rows</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>period_type</field>
            <visibility>0</visibility>
          </action>
          <action method="setOrderStatusesVisibility">
            <visibility>1</visibility>
          </action>
          <action method="setOrderSideVisibility">
            <field>visitor_type</field>
            <visibility>1</visibility>
          </action>
        </block>
      </block>
    </reference>
  </spreadtheword_adminhtml_report_rule_rating>
  <spreadtheword_adminhtml_report_involvement>
    <update handle="spreadtheword_adminhtml_report_index" />
    <reference name="content">
      <block name="spreadtheword.report.grid.container" template="addinmage/spreadtheword/reports/container.phtml" type="spreadtheword/adminhtml_reports_involvement_behavior">
        <block name="store.switcher" template="report/store/switcher/enhanced.phtml" type="adminhtml/store_switcher">
          <action method="setStoreVarName">
            <var_name>store_ids</var_name>
          </action>
        </block>
        <block name="grid.filter.form" type="spreadtheword/adminhtml_reports_filter_form">
          <action method="setFieldVisibility">
            <field>detailed_information</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>show_empty_rows</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>period_type</field>
            <visibility>0</visibility>
          </action>
          <action method="setFieldVisibility">
            <field>visitor_type</field>
            <visibility>0</visibility>
          </action>
        </block>
      </block>
    </reference>
  </spreadtheword_adminhtml_report_involvement>
</layout>
