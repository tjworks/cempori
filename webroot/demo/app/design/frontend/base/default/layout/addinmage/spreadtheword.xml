<layout version="0.1.0">
  <spreadtheword_index_index>
    <reference name="head">
      <action method="setKeywords" translate="keywords">
        <keywords>Spread The Word</keywords>
      </action>
      <action method="setDescription" translate="description">
        <description>Spread The Word</description>
      </action>
      <action method="setTitle" translate="title">
        <title>Spread The Word</title>
      </action>
      <action method="addJs">
        <script>addinmage/spreadtheword/frontend/js.js</script>
      </action>
      <action method="addCss">
        <stylesheet>css/addinmage/spreadtheword/styles.css</stylesheet>
      </action>
    </reference>
    <reference name="root">
      <action method="setTemplate">
        <template>page/1column.phtml</template>
      </action>
    </reference>
    <reference name="content">
      <block name="spreadtheword" as="spreadtheword" template="addinmage/spreadtheword/spreadtheword.phtml" type="spreadtheword/spreadTheWord">
        <block name="description" as="description" template="addinmage/spreadtheword/elements/spreadtheword/description.phtml" type="spreadtheword/elements_spreadTheWord_elements" />
        <block name="services" as="services" template="addinmage/spreadtheword/elements/spreadtheword/services.phtml" type="spreadtheword/elements_spreadTheWord_services" />
        <block name="bottom" as="bottom" template="addinmage/spreadtheword/elements/spreadtheword/bottom.phtml" type="spreadtheword/elements_spreadTheWord_elements" />
        <block name="steps" as="steps" template="addinmage/spreadtheword/elements/spreadtheword/steps.phtml" type="spreadtheword/elements_spreadTheWord_elements" />
      </block>
    </reference>
  </spreadtheword_index_index>
  <spreadtheword_manual_body>
    <reference name="content">
      <block name="root" output="toHtml" template="addinmage/spreadtheword/elements/spreadtheword/manual/body.phtml" type="spreadtheword/elements_spreadTheWord_manual" />
    </reference>
  </spreadtheword_manual_body>
  <spreadtheword_manual_title>
    <reference name="content">
      <block name="root" output="toHtml" template="addinmage/spreadtheword/elements/spreadtheword/manual/title.phtml" type="spreadtheword/elements_spreadTheWord_manual" />
    </reference>
  </spreadtheword_manual_title>
  <spreadtheword_oauthverifier_index>
    <update handle="spreadtheword_index_index" />
    <reference name="head">
      <action method="setTitle" translate="title">
        <title>Spread The Word - Verification Code</title>
      </action>
    </reference>
    <reference name="services">
      <action method="setTemplate">
        <template>addinmage/spreadtheword/elements/oauthverifier/oauthverifier.phtml</template>
      </action>
    </reference>
  </spreadtheword_oauthverifier_index>
  <spreadtheword_captchaverifier_index>
    <update handle="spreadtheword_index_index" />
    <reference name="head">
      <action method="setTitle" translate="title">
        <title>Spread The Word - Captcha Verification</title>
      </action>
    </reference>
    <reference name="services">
      <action method="setTemplate">
        <template>addinmage/spreadtheword/elements/captcha/verifier.phtml</template>
      </action>
    </reference>
  </spreadtheword_captchaverifier_index>
  <spreadtheword_friends_index>
    <update handle="spreadtheword_index_index" />
    <reference name="head">
      <action method="setTitle" translate="title">
        <title>Spread The Word - Friend List</title>
      </action>
      <action method="addJs">
        <script>scriptaculous/slider.js</script>
      </action>
    </reference>
    <reference name="spreadtheword">
      <action method="unsetChildren"></action>
      <block name="top" as="top" template="addinmage/spreadtheword/elements/friends/top.phtml" type="spreadtheword/elements_friends_top" />
      <block name="friends" as="friends" template="addinmage/spreadtheword/elements/friends/friends.phtml" type="spreadtheword/elements_friends_friends" />
      <block name="bottom" as="bottom" template="addinmage/spreadtheword/elements/friends/bottom.phtml" type="spreadtheword/elements_friends_bottom" />
      <block name="steps" as="steps" template="addinmage/spreadtheword/elements/spreadtheword/steps.phtml" type="spreadtheword/elements_spreadTheWord_elements" />
    </reference>
  </spreadtheword_friends_index>
  <spreadtheword_success_index>
    <update handle="spreadtheword_index_index" />
    <reference name="head">
      <action method="setTitle" translate="title">
        <title>Spread The Word - Invitations Sent!</title>
      </action>
    </reference>
    <reference name="spreadtheword">
      <action method="unsetChildren"></action>
      <block name="description" as="description" template="addinmage/spreadtheword/elements/success/description.phtml" type="spreadtheword/elements_success_success" />
      <block name="discount" as="discount" template="addinmage/spreadtheword/elements/success/stats.phtml" type="spreadtheword/elements_success_success" />
      <block name="bottom" as="bottom" template="addinmage/spreadtheword/elements/success/bottom.phtml" type="spreadtheword/elements_success_success" />
      <block name="steps" as="steps" template="addinmage/spreadtheword/elements/spreadtheword/steps.phtml" type="spreadtheword/elements_spreadTheWord_elements" />
    </reference>
  </spreadtheword_success_index>
</layout>
